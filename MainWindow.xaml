<Window x:Class="MediCore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediCore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Welcome to MediCore!" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Logout" HorizontalAlignment="Left" Height="29" Margin="707,10,0,0" VerticalAlignment="Top" Width="83" Click="Button_Click" Background="#FF85ADC9" FontWeight="Bold" FontSize="18"/>
        <Label x:Name="CountdownLabel" Content="Time left: 5:00" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="29" Width="99" FontWeight="Bold"/>
    </Grid>
</Window>
